{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": ".",               // Compiles from current directory
    "outDir": "dist",             // Outputs JS files to /dist
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["server.ts", "db.ts", "models", "routes"]
}

